<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>CodeClass</title>
    <% include ./partials/_head.ejs %>
  </head>
  <header>
    <% include ./partials/_nav.ejs %>
  </header>
  <body id="user-classroom-body">

    <div id="myModal" class="modal">

    	<!-- Modal content -->

    	<div class="modal-content slideDown">

    		<div class="modal-header">
    			<span class="closeModal" id="closeModal">&times;</span>
    			<h2>Create a Class</h2>
    		</div>
    		<div class="modal-body">
    			<form action="/rooms" method="POST" class="modal-form">
    				<div class="form-row">
    					<label for="">Title</label>
              <input id="new-classroom--title" type="text" class="" name="topic">
    				</div>

    				<div class="form-row">
                <label for="">Language</label>
                <div class="input-group btn-group-language" data-toggle="buttons">
                 <div class="radio-inline btn btn-primary btn-xs">
                   <label>
                     <input type="radio" class="radio-none" name="language" id="radio-javascript" value="javascript" checked>
                     Javascript
                   </label>
                 </div>
                 <div class="radio-inline btn btn-primary btn-xs">
                   <label>
                     <input type="radio" class="radio-none" name="language" id="radio-ruby" value="ruby">
                     Ruby
                   </label>
                 </div>
                 <div class="radio-inline btn btn-primary btn-xs">
                   <label>
                     <input type="radio" class="radio-none" name="language" id="radio-python" value="python">
                     Python
                   </label>
                 </div>
               </div>
              </div>

    		</div>
    		<div class="modal-footer">
          <button type="submit" class="btn btn-success btn-lg">Create classroom</button>
    		</div>
    		</form>

    	</div>

    </div>


    <section id="user-classroms" class="container">
      <div id="user-jumbo" class="jumbotron clearfix top">
        <div class="col-xs-2 col-sm-3">
          <img class="img-circle img-responsive" src=<%= profile.github_avatar %> />
        </div>
        <div class="col-xs-10 col-sm-9">
          <h1 class="username"><%= profile.github_login %></h1>
        </div>
      </div>
      <div>
      <h1 class="my-classrooms-heading" style="display: inline-block"> My Classrooms </h1>
        <div style="display: inline-block; float: right">
              <div class="btn-group btn-group-sm filter-language-group" role="group" aria-label="...">
                  <button type="button" class="btn btn-default filter-js" data-filter="*">All</button>
                  <button type="button" class="btn btn-default filter-js" data-filter=".javascript">Javascript</button>
                  <button type="button" class="btn btn-default filter-ruby" data-filter=".ruby">Ruby</button>
                  <button type="button" class="btn btn-default filter-python" data-filter=".python">Python</button>
              </div>

              <div class="btn-group btn-group-sm sort-by-button-group" role="group" aria-label="...">
                  <button type="button" class="btn btn-default filter-js" data-sort-by="original-order">Reset</button>
                  <button type="button" class="btn btn-default filter-js" data-sort-by="topic" data-order="ascending"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></button>
                  <button type="button" class="btn btn-default filter-js" data-sort-by="topic" data-order="descending"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></button>
              </div>
            </div>
          </div>

        <div class="well well-lg myrooms-container">
          <% classrooms.forEach((classroom) => { %>
            <% include ./partials/_room_card.ejs %>
          <% }) %>
      </div>
    </div>
    </section>
    <% include ./partials/_scripts.ejs %>
    <% include ./partials/_card_scripts.ejs %>
  </body>
</html>
